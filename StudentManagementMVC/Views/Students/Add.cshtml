@model StudentManagementMVC.Models.AddStudentViewModel
@{
    bool? status = TempData["Status"] as bool?;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Form</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">@( status is true ? "Register Student" : "Update Student" )</h1>
        <form asp-action="Add" asp-controller="Students" method="post">
            <input asp-for="ID" type="hidden"/>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" type="text"/>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" type="email"/>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" type="tel"/>
            </div>
            <div class="form-group form-check">
                <input asp-for="Subed" class="form-check-input" type="checkbox"/>
                <label asp-for="Subed" class="form-check-label"></label>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    @( status is true ? "Add" : "Update")
                </button>
            </div>
        </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
