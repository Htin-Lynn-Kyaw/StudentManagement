@model List<StudentManagementMVC.Models.Entities.Student>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>List of Students</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">List of Students</h1>
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    @* <th>ID</th> *@
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Subscribed</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    <tr>
                        @* <td>@student.ID</td> *@
                        <td>@student.Name</td>
                        <td>@student.Email</td>
                        <td>@student.Phone</td>
                        <td>@(student.Subed ? "Yes" : "No")</td>
                        <td>
                            <a href="@Url.Action("Add", "Students", new { id = student.ID })" class="btn btn-primary">Edit</a>
                            <a href="@Url.Action("Delete", "Students", new { id = student.ID })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this student?');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
